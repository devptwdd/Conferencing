<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_layout"
    android:padding="5dp"
    android:weightSum="10"
    tools:context=".activity.Chat">


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="112dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        app:srcCompat="@drawable/demo_version" />


    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"

        android:alignmentMode="alignMargins"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3"
        tools:context=".GridXMLActivity">


        <ImageButton
            android:id="@+id/volume_up"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/volume_up" />


        <ImageButton
            android:id="@+id/talk_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/talk_button" />


        <ImageButton
            android:id="@+id/volume_down"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:padding="10dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/volume_down" />
    </GridLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="15dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:src="@drawable/talk" />

    <TextView
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STATUS: Not Connected"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>